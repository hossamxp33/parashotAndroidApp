<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/productname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/linear_background_for_new_order"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:padding="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="3dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_gravity="top"
        android:layout_marginEnd="5dp"
        android:background="@drawable/income" />

    <View
        android:id="@+id/view1"
        android:layout_width="2dp"
        android:layout_gravity="top"
        app:layout_constraintStart_toEndOf="@id/item_img"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/storename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:maxLines="2"
        app:layout_constraintWidth_percent="0.4"
        android:ellipsize="end"
        android:text="@string/productprice"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@id/view1" />



    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/paymentway"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.4" />



    <TextView
        android:id="@+id/storenamevalue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:maxLines="2"
        app:layout_constraintWidth_percent="0.4"
        android:ellipsize="end"
        android:text="3500 ريال سعودي "
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/storename"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@id/view1" />



    <TextView
        android:id="@+id/textView4value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="بطاقة الاتمان"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/storename"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.4" />


</android.support.constraint.ConstraintLayout>













