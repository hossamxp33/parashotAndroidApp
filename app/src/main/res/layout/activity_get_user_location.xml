<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".presentation.screens.getUserLocation.GetUserLOcationActivity">

    <!--<com.google.android.gms.maps.MapView-->
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:id="@+id/mapView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--/>-->

    <LinearLayout
        android:id="@+id/mapshap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:weightSum="3"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/linear_background_for_map_shap"
        app:layout_constraintHeight_percent="0.085"
        >

        <TextView
            android:id="@+id/map_shap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/map"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:gravity="center"
            android:background="@color/maptextcolor"
            android:textColor="@color/white"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/maptextcolor"

            />

        <TextView
            android:id="@+id/satalite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/Satellite"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textSize="16sp"
            android:textColor="@color/maptextcolor"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/maptextcolor"
            />

        <TextView
            android:id="@+id/hagintxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/hagin"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:textColor="@color/maptextcolor"
            />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/search"
        android:layout_width="0dp"
        android:background="@drawable/linear_background_for_map_shap"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@+id/mapshap"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="0dp">


        <android.support.v7.widget.AppCompatImageView
            android:layout_width="30dp"
            android:id="@+id/searchicon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="7dp"
            android:src="@drawable/search_icon"
            android:layout_height="30sp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/search"
            app:layout_constraintEnd_toStartOf="@id/search_btn"
            app:layout_constraintStart_toEndOf="@id/searchicon"
            />



        <TextView
            android:id="@+id/search_btn"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/search"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintHeight_percent="0.03"
            android:background="@drawable/linear_background_for_search_shap"
            app:layout_constraintWidth_percent="0.02"
            />

    </android.support.constraint.ConstraintLayout>

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/usermap"
        app:layout_constraintTop_toBottomOf="@+id/search"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="0dp" />


    <ImageView
        android:id="@+id/mMarker"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/loc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.404" />


    <ImageButton
        android:id="@+id/mylocation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/navigate" />

    <TextView

        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.1"
        android:layout_marginBottom="5dp"
        app:layout_constraintWidth_percent="0.97"
        android:text="@string/send"
        android:onClick="finish"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:background="@drawable/linear_background_user_get_location"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.73"
        />

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="23dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guid2"
        android:src="@drawable/map_loc"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/linear_background_cart_quntity"
        app:layout_constraintBottom_toTopOf="@+id/guid"
        app:layout_constraintHeight_percent="0.2"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <ImageView
            android:id="@+id/pin"
            android:layout_width="11dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/pin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/pin"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/latlog_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/pin"
            app:layout_constraintTop_toBottomOf="@+id/address_txt" />


        <EditText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/linear_background_for_details_address"
            android:hint="@string/details_adress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.95" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>